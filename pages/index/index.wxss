page {
    background-color: #ededed;
    height: 100vh;
    display: flex;
    flex-direction: column;
  }

  /* 页面头部操作栏 */
  .header-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 30rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #eee;
  }

  .header-btn {
    display: flex;
    align-items: center;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
    color: #07c160;
    background-color: rgba(7, 193, 96, 0.1);
    border: 1rpx solid rgba(7, 193, 96, 0.3);
    border-radius: 8rpx;
  }

  .header-btn-icon {
    margin-right: 10rpx;
    font-size: 32rpx;
  }

  .container {
    height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    padding: 0;
  }
  
  /* 滚动区域 */
  .chat-scroll {
    flex: 1;
    padding: 20rpx;
    box-sizing: border-box;
    height: calc(100vh - 120rpx); /* 减去底部输入框高度 */
  }
  
  /* 时间戳 */
  .time-stamp {
    text-align: center;
    font-size: 24rpx;
    color: #b2b2b2;
    margin: 20rpx 0;
  }
  
  /* 消息组布局 */
  .message-group {
    display: flex;
    margin-bottom: 30rpx;
    align-items: flex-start;
  }
  
  .user-group {
    justify-content: flex-end;
  }
  
  .bot-group {
    justify-content: flex-start;
  }
  
  /* 头像 */
  .avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40rpx;
    background-color: #fff;
  }
  
  .bot-avatar {
    margin-right: 20rpx;
    background-color: #e1f5fe;
  }
  
  .user-avatar {
    margin-left: 20rpx;
    background-color: #a5d6a7;
  }
  
  /* 气泡样式 */
  .bubble {
    max-width: 440rpx;
    padding: 20rpx;
    border-radius: 10rpx;
    font-size: 30rpx;
    line-height: 1.5;
    word-break: break-all;
    position: relative;
  }

  /* 消息中的图片 */
  .message-images {
    margin-bottom: 10rpx;
  }

  .message-image {
    max-width: 100%;
    border-radius: 8rpx;
    margin-bottom: 10rpx;
  }

  /* 消息中的文件 */
  .message-files {
    margin-bottom: 10rpx;
  }

  .message-file {
    display: flex;
    align-items: center;
    background-color: rgba(0, 0, 0, 0.05);
    border-radius: 8rpx;
    padding: 10rpx;
    margin-bottom: 10rpx;
  }

  .message-file .file-icon {
    font-size: 36rpx;
    margin-right: 10rpx;
  }

  .message-file .file-info {
    flex: 1;
  }

  .message-file .file-name {
    font-size: 26rpx;
    color: #333;
    margin-bottom: 4rpx;
    word-break: break-all;
  }

  .message-file .file-size {
    font-size: 22rpx;
    color: #888;
  }
  
  .bot-bubble {
    background-color: #fff;
    color: #333;
  }
  
  .user-bubble {
    background-color: #95ec69; /* 微信绿 */
    color: #000;
  }
  
  /* Loading 动画 */
  .loading-wrap {
    display: flex;
    align-items: center;
    padding-left: 100rpx;
    margin-bottom: 20rpx;
    font-size: 24rpx;
    color: #888;
  }
  
  .loading-dots {
    display: flex;
    margin-right: 10rpx;
  }
  
  .dot {
    width: 8rpx;
    height: 8rpx;
    background-color: #888;
    border-radius: 50%;
    margin: 0 4rpx;
    animation: dot-blink 1.4s infinite ease-in-out both;
  }
  
  .dot:nth-child(1) { animation-delay: -0.32s; }
  .dot:nth-child(2) { animation-delay: -0.16s; }
  
  @keyframes dot-blink {
    0%, 80%, 100% { transform: scale(0); }
    40% { transform: scale(1); }
  }
  
  /* 底部输入框 */
  .input-area {
    background-color: #f7f7f7;
    border-top: 1rpx solid #dcdcdc;
    display: flex;
    flex-direction: column;
    padding: 10rpx 20rpx;
    position: fixed;
    bottom: 0;
    width: 100%;
    padding-bottom: env(safe-area-inset-bottom);
  }

  /* 已选择的图片预览 */
  .selected-images {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 10rpx;
  }

  .selected-image-container {
    position: relative;
    width: 100rpx;
    height: 100rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
  }

  .selected-image {
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
  }

  .remove-image {
    position: absolute;

    top: -10rpx;
    right: -10rpx;
    width: 30rpx;
    height: 30rpx;
    background-color: #ff4757;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20rpx;
    font-weight: bold;
  }

  /* 已选择的文件预览 */
  .selected-files {
    display: flex;
    flex-direction: column;
    margin-bottom: 10rpx;
  }

  .selected-file-container {
    display: flex;
    align-items: center;
    background-color: #fff;
    border-radius: 8rpx;
    padding: 10rpx;
    margin-bottom: 10rpx;
    position: relative;
  }

  .selected-file-container .file-icon {
    font-size: 40rpx;
    margin-right: 10rpx;
  }

  .selected-file-container .file-info {
    flex: 1;
  }

  .selected-file-container .file-name {
    font-size: 26rpx;
    color: #333;
    margin-bottom: 4rpx;
    word-break: break-all;
  }

  .selected-file-container .file-size {
    font-size: 22rpx;
    color: #888;
  }

  .remove-file {
    position: absolute;
    top: -5rpx;
    right: -5rpx;
    width: 30rpx;
    height: 30rpx;
    background-color: #ff4757;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20rpx;
    font-weight: bold;
  }

  /* 输入行 */
  .input-row {
    display: flex;
    align-items: center;
  }

  .plus-btn {
    width: 70rpx !important;
    height: 72rpx;
    line-height: 72rpx;
    margin-right: 10rpx;
    padding: 0;
    font-size: 36rpx;
    background-color: #ededed;
    color: #333;
    border-radius: 10rpx;
    font-weight: normal;
  }

  .image-btn {
    width: 70rpx !important;
    height: 72rpx;
    line-height: 72rpx;
    margin-right: 10rpx;
    padding: 0;
    font-size: 36rpx;
    background-color: #ededed;
    color: #333;
    border-radius: 10rpx;
    font-weight: normal;
  }

  .file-btn {
    width: 70rpx !important;
    height: 72rpx;
    line-height: 72rpx;
    margin-right: 10rpx;
    padding: 0;
    font-size: 36rpx;
    background-color: #ededed;
    color: #333;
    border-radius: 10rpx;
    font-weight: normal;
  }
  
  .input-box {
    flex: 1;
    background-color: #fff;
    height: 72rpx;
    border-radius: 10rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
  }
  
  .send-btn {
    width: 120rpx !important;
    height: 72rpx;
    line-height: 72rpx;
    margin-left: 20rpx;
    padding: 0;
    font-size: 28rpx;
    background-color: #ededed;
    color: #b2b2b2;
    border-radius: 10rpx;
    font-weight: normal;
  }
  
  .send-btn.active {
    background-color: #07c160;
    color: #fff;
  }

/* 弹出菜单 */
.popup-menu {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
}

.popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
}

.popup-content {
  position: absolute;
  bottom: 110rpx;
  left: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.2);
}

.popup-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.popup-item:last-child {
  border-bottom: none;
}

.popup-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.popup-text {
  font-size: 30rpx;
  color: #333;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-container {
  background-color: #fff;
  border-radius: 10rpx;
  width: 80%;
  max-height: 80%;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
}

.modal-body {
  padding: 20rpx 30rpx;
  flex: 1;
  overflow-y: auto;
}

.language-list {
  max-height: 500rpx;
  overflow-y: auto;
}

.language-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.language-item.selected {
  background-color: #e6f7ff;
}

.toggle-all {
  padding: 20rpx;
  text-align: center;
  color: #1890ff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.toggle-all text {
  margin-right: 10rpx;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}

.modal-cancel,
.modal-confirm {
  flex: 1;
  border-radius: 0;
  border: none;
}

.modal-confirm {
  border-left: 1rpx solid #eee;
  color: #1890ff;
}
