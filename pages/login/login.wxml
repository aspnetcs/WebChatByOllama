<!-- pages/login/login.wxml -->
<view class="login-container">
  <view class="login-header">
    <text class="title">欢迎使用Ollama AI助手</text>
  </view>
  
  <view class="login-content">
    <text class="subtitle">登录以保存您的对话历史</text>
    
    <button class="login-button" open-type="getUserInfo" 
            bindgetuserinfo="getUserInfo" 
            bindtap="wechatLogin"
            hover-class="button-hover">
      微信一键登录
    </button>
    
    <view class="login-tips">
      <text class="tips-text">登录后可同步您的对话历史记录</text>
    </view>
  </view>
</view>